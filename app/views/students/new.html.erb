
<div class="text-center">
  <h1>新規登録</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="form-group">
        <%= f.label :student_id , '学籍番号' %>
        <%= f.text_field :student_id, onkeydown: "return key_down(event.keyCode);", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>所属</label>
        <%= select_tag 'student[classroom]', options_for_select(@classrooms.order(grade: :asc).map(&:abbr)), class: "form-control", style: "width: 100px" %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
